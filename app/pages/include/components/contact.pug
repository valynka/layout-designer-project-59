if page === 'chat'
  section.px-4.contacts.tab-pane.fade(id='contacts' role='tabpanel' aria-labelledby='nav-contacts-tab')
    include ../leftside-top.pug
    each users, letter in contacts
      p.text-muted.text-uppercase.mt-5= letter 
      each user in users
        a.contact.mb-3(href='#')          
          img.avatar.me-4(src= user.avatar alt="avatar")
          .contact-body
            p.contact-name= user.name
            p.contact-status= user.status
