- title = 'Чаты';
- page = 'chat';


doctype html
html.h-100(lang='ru')
  include include/head.pug

  body.h-100
    .container-xxxl.h-100.bg-gray.p-0.p-md-4.overflow-hidden
      .row.h-100.rounded-0.rounded-md-4.bg-white.overflow-hidden.mx-0
        .col-12.col-md-7.col-lg-6.col-xl-5.col-xxl-4.border-0.border-end-md.d-flex.flex-column.p-0       
          include include/components/nav.pug
          .order-1.order-md-2.tab-content(id='nav-tabContent')
            if page === 'chat'
              section.tab-pane.fade.d-md-none(id='current-chat' role='tabpanel' aria-labelledby='nav-dialog-tab')
                include include/components/dialog.pug
            include include/components/contact.pug
            include include/components/chats.pug
            include include/components/profile.pug
        .col-md-5.col-lg-6.col-xl-7.col-xxl-8.d-none.d-md-flex.flex-column.align-content-center.p-0
          section 
            include include/components/dialog.pug

    script(src='js/bootstrap.min.js')